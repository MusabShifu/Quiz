<script
  src="https://code.jquery.com/jquery-3.7.1.js"
  integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
  crossorigin="anonymous"></script>
<script>
let ans = 'ccabcbdbba';
                          ans = ans.split('')
        $('button').click(
            function () {
                let i = 1;
                let c = 0;
                let r = document.querySelectorAll(':checked');
                if(r.length == ans.length){
                    ans.forEach(an => {
                        if (r[i - 1].id[0] == an) {
                            $(`.f${i} .${an[0]}`).css('background', '#4caf50')
                            c += 1
                        }
                        else {
                            $(`.f${i} .${an[0]}`).css('background', '#4caf50')
                            $(`.f${i} .${r[i - 1].id[0]}`).css('background', '#f44336')
                        }
                        i++;
    
                    });
                    $(this).css('display', 'none')
                    if (c>=(ans.length/2)){
                    $('.score').append(`Your Score is <span class="w">${c}</span> from ${ans.length}`)
                    }
                    else{
                    $('.score').append(`Your Score is <span class="l">${c}</span> from ${ans.length}`)
                    }
                }
                else{
                    alert('You Don\'t Answer All The Questions')
                }
            }
        );

               
</script>
